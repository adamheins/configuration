alias vim=/usr/local/bin/vim # Use vim installed by brew instead of system vim.
alias ls="ls -G"
alias pwaf="pypy waf"

# Reload bash things.
#alias reload=". ~/.bash_profile"

# Aliases for ls.
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Aliases for changing to parent directories.
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Git aliases.
alias gst="git status"
alias ga="git add -A"
alias gb="git branch"
alias gc="git commit"
alias gp="git pull"
alias gch="git checkout"
