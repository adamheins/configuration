here=${0:a:h}
common=$here/common

# Autocompletion.
if [ -d $common/comp ]; then
  fpath=($fpath $common/comp)
fi

# Binaries.
if [ -d $common/bin ]; then
  export PATH=$common/bin:$PATH
fi

# Scripts to be sourced.
if [ -d $common/scripts ]; then
  for f in $common/scripts/*.sh(.N); do source "$f"; done
  for f in $common/scripts/*.zsh(.N); do source "$f"; done
fi

# Plugins.
if [ -d $common/tps/zsh-syntax-highlighting ]; then
  source $common/tps/zsh-syntax-highlighting/zsh-syntax-highlighting.plugin.zsh
fi

if [ -f $common/tps/.fzf.zsh ]; then
  source $common/tps/.fzf.zsh
fi

if [ -d $common/tps/f ]; then
  source $common/tps/f/f.zsh
fi
